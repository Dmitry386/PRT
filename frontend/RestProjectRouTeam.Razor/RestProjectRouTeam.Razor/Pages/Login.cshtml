@page
@using RestProjectRouTeam.Razor.PageModels
@model LoginViewModel

@{
    ViewBag.Title = "Login/Register";
}
 
@if (await Model.IsAuthorized() == false) // Проверка на авторизацию
{
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <br/>

        <button type="submit" class="btn btn-primary">Login or Register</button>
    </form>
}
else
{  
    <div class="form-group">
        
        <p>Вы авторизованы.</p>
        <form method="post">
            <input type="submit" value="Выход" asp-page-handler="ButtonExit" class="btn btn-secondary" /> 
        </form>

    </div> 
}